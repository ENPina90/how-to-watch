<div class="container">
  <div class="row justify-content-center">
    <h1 class="text-center"><%= @list.name %></h1>
    <div class="col-2">
      <%= link_to 'Edit', edit_list_path(@list), class: 'btn btn-primary' %>
    </div>
    <div class="col-8">
      <%= text_field_tag :entry, nil, data: { controller: 'search', action: 'keyup->search#omdb' } %>
    </div>
    <div class="col-2">
      <%= link_to '+ Entry', new_list_entry_path(@list), class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-8">
      <% @entries.each do |entry| %>
        <div class="card mb-4 pb-2" style="height: 25vh;">
          <div class="row g-0">
            <div class="col-6 pt-2 px-2">
              <img src="<%= entry.pic %>" class="card-img-top entry-card" alt="...">
            </div>
            <div class="col-6" style="100%">
              <div class="card-body">
                <h5 class="card-title"><%= entry.name %></h5>
                <p class="overflow-hidden"><%# entry.synopsis %></p>
                <a href="#" class="btn btn-primary">Watch</a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
