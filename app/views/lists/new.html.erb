<%= simple_form_for @list do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text, input_html: { rows: 3 }, hint: 'Optional description of this list' %>
  <%= f.input :parent_list_id,
      collection: current_user.lists.where(parent_list_id: nil),
      label_method: :name,
      value_method: :id,
      prompt: 'Select a parent list (optional)',
      label: 'Add to List',
      hint: 'Choose an existing list to add this list to, or leave blank to create a standalone list' %>
  <%= f.input :ordered, as: :boolean %>
  <%= f.input :private, as: :boolean %>
  <%= f.input :reviewable, as: :boolean, label: 'Enable review prompts', hint: 'Ask for ratings and comments when marking entries as watched' %>
  <% if current_user&.can_set_default? %>
    <%= f.input :default, as: :boolean, label: 'Set as default list', hint: 'Default lists are visible to all users' %>
  <% end %>
  <%= f.input :sort, collection: ['Year', 'Genre', 'Watched', 'Type', 'Length'], include_blank: true %>
  <%= f.input :preferred_source, collection: [['Source 1', 1], ['Source 2', 2]], include_blank: false, label: 'Preferred Source', hint: 'Default source to use for entries in this list' %>
  <%= f.input :auto_play, as: :boolean, label: 'Auto Play', hint: 'Automatically start playing entries when opened' %>
  <%= f.input :auto_next, as: :boolean, label: 'Auto Next', hint: 'Automatically advance to next entry when current one is completed' %>
  <%= f.button :submit %>
<% end %>
