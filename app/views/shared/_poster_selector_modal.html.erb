<%# Poster Selection Modal %>
<div
  class="modal fade"
  id="posterModal-<%= entry.id %>"
  tabindex="-1"
  aria-labelledby="posterModalLabel-<%= entry.id %>"
  aria-hidden="true"
  data-controller="poster-selector"
  data-poster-selector-entry-id-value="<%= entry.id %>"
  data-poster-selector-imdb-value="<%= entry.imdb %>"
  data-poster-selector-series-imdb-value="<%= entry.series_imdb %>"
  data-poster-selector-tmdb-value="<%= entry.tmdb %>"
  data-poster-selector-target="modal"
  >
  <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="posterModalLabel-<%= entry.id %>">Choose Poster for <%= entry.name %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div data-poster-selector-target="loading" class="text-center py-5">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <p class="mt-3">Finding available posters...</p>
        </div>
        <div data-poster-selector-target="results" class="row g-3" style="display: none;"></div>
        <div data-poster-selector-target="error" class="alert alert-warning" style="display: none;" role="alert">
          No posters found. Please try again or contact support.
        </div>
      </div>
    </div>
  </div>
</div>
