<div class="mobile-entry-container">
  <!-- Mobile Entry Poster -->
  <div class="mobile-entry-poster">
    <%= entry_poster_image_tag(@entry, class: "mobile-poster-full-width", alt: @entry.name) %>
  </div>

  <!-- Mobile Entry Details -->
  <div class="mobile-entry-details">
    <!-- Entry Title -->
    <h1 class="mobile-entry-title"><%= @entry.name %></h1>

    <!-- Year and Length Row -->
    <div class="mobile-entry-meta">
      <span class="mobile-entry-year"><%= @entry.year %></span>
      <% if @entry.length.present? %>
        <span class="mobile-entry-length"><%= @entry.length %> min</span>
      <% end %>
    </div>

    <!-- Plot -->
    <% if @entry.plot.present? %>
      <div class="mobile-entry-plot">
        <p><%= @entry.plot %></p>
      </div>
    <% end %>

    <!-- Additional Info -->
    <div class="mobile-entry-info">
      <% if @entry.genre.present? %>
        <div class="mobile-entry-genre">
          <strong>Genre:</strong> <%= @entry.genre %>
        </div>
      <% end %>

      <% if @entry.rating.present? %>
        <div class="mobile-entry-rating">
          <strong>Rating:</strong> <%= @entry.rating %>/10
        </div>
      <% end %>

      <% if @entry.director.present? %>
        <div class="mobile-entry-director">
          <strong>Director:</strong> <%= @entry.director %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Mobile Entry Actions -->
  <div class="mobile-entry-actions">
    <!-- Delete Button (only for users who can edit) -->
    <% if current_user&.can_edit_entry?(@entry) %>
      <%= link_to entry_path(@entry),
          method: :delete,
          class: "btn btn-danger mobile-delete-btn",
          data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure you want to delete '#{@entry.name}'? This action cannot be undone."
          } do %>
        <i class="fa-solid fa-trash me-2"></i>Delete Entry
      <% end %>
    <% end %>
  </div>
</div>

<style>
.mobile-entry-container {
  padding: 0;
  max-width: 100%;
  background: white;
  min-height: 100vh;
}

.mobile-entry-poster {
  width: 100%;
  margin-bottom: 20px;
}

.mobile-poster-full-width {
  width: 100%;
  height: auto;
  object-fit: cover;
  display: block;
}

.mobile-entry-details {
  padding: 20px;
}

.mobile-entry-title {
  font-size: 1.8rem;
  font-weight: 700;
  color: #333;
  margin-bottom: 15px;
  line-height: 1.3;
}

.mobile-entry-meta {
  display: flex;
  gap: 20px;
  margin-bottom: 20px;
  font-size: 1.1rem;
  color: #666;
}

.mobile-entry-year {
  font-weight: 600;
}

.mobile-entry-length {
  font-weight: 500;
}

.mobile-entry-plot {
  margin-bottom: 25px;
}

.mobile-entry-plot p {
  font-size: 1rem;
  line-height: 1.6;
  color: #555;
  margin: 0;
}

.mobile-entry-info {
  margin-bottom: 30px;
}

.mobile-entry-info > div {
  margin-bottom: 10px;
  font-size: 0.95rem;
  color: #666;
}

.mobile-entry-info strong {
  color: #333;
  font-weight: 600;
}

.mobile-entry-actions {
  padding: 20px;
  background: #f8f9fa;
  border-top: 1px solid #e9ecef;
  position: sticky;
  bottom: 0;
}

.mobile-delete-btn {
  width: 100%;
  padding: 15px;
  font-size: 1.1rem;
  font-weight: 600;
  border-radius: 12px;
  background-color: #dc3545;
  border-color: #dc3545;
}

.mobile-delete-btn:hover {
  background-color: #c82333;
  border-color: #bd2130;
}

/* Responsive adjustments */
@media (max-width: 480px) {
  .mobile-entry-title {
    font-size: 1.5rem;
  }

  .mobile-entry-meta {
    font-size: 1rem;
    gap: 15px;
  }

  .mobile-entry-details {
    padding: 15px;
  }

  .mobile-entry-actions {
    padding: 15px;
  }
}
</style>
